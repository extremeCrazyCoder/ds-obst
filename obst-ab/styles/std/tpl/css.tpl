{literal}
	body
	{
		background-color: #DED3B9;
		color: #000000;
		font-family: Verdana, Arial, Helvetica, sans-serif;
		font-size: 9pt;
		padding: 5px;
        height: 500px;
	}
	h1
	{
		text-decoration: none;
	}
	h2,h3
	{
		text-decoration: underline;
	}
	blockquote
	{
		font-size: 12px;
		font-style: italic;
	}
	a
	{
		color: #804000;
		font-weight: bold;
	}
	a:hover
	{
		color: #0082BE;
		font-weight: bold;
	}
	th
	{
		background-color: #DED3B9;
	}
	.dsstyle_body
	{
		background-color: #F1EBDD;
		border-color: #804000;
		border-style: solid;
		border-width: 2px;
		padding: 5px;
		padding-left: 20px;
		padding-right: 20px;
	}
	#main_layout
	{
		height: 100%;
		width: 100%;
	}
	#main_layout tr
	{
		height: 100%;
	}
	#main_layout td
	{
		height: 100%;
		text-align: left;
		vertical-align: top;
	}
	#copyright
	{
		font-size: 10px;
		text-align: right;
	}
    #ds_navi
    {
        text-align: left;
        margin-bottom: 10px;
    }
	#ds_navi > span
	{
        background-color: #F1EBDD;
        border: #000000 1px solid;
		padding: 5px;
		text-align: left;
		margin-bottom: 25px;
	}
    #admin_link
    {
        margin-top: 5px;
        text-align:center;
    }
    #sub_navi
    {
        float: left;
        height: 100%;
        width: 200px;
    }
    #report_box
    {
        max-width: 500px;
    }
    #report_control
    {
        margin-bottom: 10px;
    }
    div.with_navi
    {
        padding-top: 1px;
        margin-left: 210px;
    }
    table.simple_border { border: 1px solid #DED3B9; }
    .hidden { color:#DED3B9; }
    
